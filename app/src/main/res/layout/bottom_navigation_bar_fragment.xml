<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/threeButtonNav"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#6dafff"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/areasListView">

    <TextView
        android:id="@+id/profile_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6dafff"
        android:gravity="center"
        android:text="Profils"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/deals_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6dafff"
        android:gravity="center"
        android:text="Darījumi"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/favorites_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6dafff"
        android:gravity="center"
        android:text="Favorīti"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>