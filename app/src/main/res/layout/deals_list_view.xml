<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/deals_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Jānis Bērziņš"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:clickable="false"
        android:id="@+id/deals_checkBox"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Apstiprināts"
        app:layout_constraintStart_toStartOf="@+id/deals_name_textView"
        app:layout_constraintTop_toBottomOf="@+id/deals_name_textView" />


    <TextView
        android:id="@+id/deals_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="?android:attr/editTextBackground"
        android:ems="7"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/deals_checkBox"
        app:layout_constraintEnd_toStartOf="@+id/deals_date_image"
        app:layout_constraintTop_toTopOf="@+id/deals_name_textView" />

    <TextView
        android:id="@+id/deals_textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/comfortaa"
        android:text="18:32"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="@+id/deals_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deals_date" />

    <ImageView
        android:id="@+id/deals_date_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/deals_date"
        app:layout_constraintEnd_toStartOf="@+id/deals_textClock"
        app:layout_constraintTop_toTopOf="@+id/deals_date"
        app:srcCompat="@drawable/date_icon_image" />

</android.support.constraint.ConstraintLayout>